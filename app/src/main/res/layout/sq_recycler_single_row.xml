<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlsq"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@drawable/custom_grid_layout"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtsqname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:text="name"
        android:textColor="@color/design_default_color_error"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgsq"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_above="@id/txtsqenglishname"
        android:layout_below="@id/txtsqname"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:src="@drawable/alquran" />

    <TextView
        android:id="@+id/txtsqenglishname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:text="englishname"
        android:textColor="#009688"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>