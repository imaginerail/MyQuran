<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_weight="6"
    android:background="@color/colorAccent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtnumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1."
        android:textColor="#3F51B5"
        android:textSize="28sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/txtsurahname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="SURAH NAME"
            android:textColor="#FDFAFD"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txrevanum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtsurahname"
            android:gravity="center"
            android:text="(Meccan) Total Ayats:111"
            android:textColor="#F44336"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/btnAddFav"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/ic_fav"
        android:padding="2dp" />

</LinearLayout>